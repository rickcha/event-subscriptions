<h2>Sign up</h2>

<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= view_context.pluralize(@user.errors.count, "error") %> prohibited from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p> <%= f.text_field :first_name, :placeholder => "First name" %> </p>
  <p> <%= f.text_field :last_name, :placeholder => "Last name" %> </p>
  <p> <%= f.email_field :email, :placeholder => "Email" %> </p>
  <p> <%= f.password_field :password, :placeholder => "Password" %> </p>
  <p> <%= f.select :gender, [['Male','male'],['Female','female']] %> </p>
  <p> <%= f.submit "Create an account" %> </p>
<% end %>